/**
 * Graph
 */
Errc PFile( const Graph2d &gs ) {
   fprintf(stdout, "Type      : Graph2d (graph 2d)\n");
   fprintf(stdout, "Nb nodes  : %d\n", (gs[0] == NULL) ? gs.Size() - 1 : gs.Size());
   fprintf(stdout, "Size      : %d columns x %d rows\n", gs.Width(), gs.Height());
   return SUCCESS;
}

