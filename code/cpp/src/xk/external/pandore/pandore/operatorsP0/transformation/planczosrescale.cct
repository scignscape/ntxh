template <typename T>
inline Errc PLanczosRescale( const Imx3d<T> &ims, Imx3d<T> &imd, const float factorz, const float factory, const float factorx ) {
   Errc result = PConvolution(ims,imd,factorz,factory,factorx);
   lanczos.clear();
   return result;
}

