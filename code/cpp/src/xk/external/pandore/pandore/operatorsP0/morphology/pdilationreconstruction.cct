   TIN::ValueType val, maxv;
   Fifo<POINT> fX, fY, fZ;

   if (connexity != 4 && connexity != 8 && connexity != 6 && connexity != 26) {
      std::cerr << "Error pdilationreconstruction: bad connexity value:" << connexity << std::endl;
      return FAILURE;
