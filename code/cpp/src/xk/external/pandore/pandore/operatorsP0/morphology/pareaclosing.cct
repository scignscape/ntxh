#include <pandore.h>
using namespace pandore;

/**
 * @file pareaclosing.cpp
 * Fermeture de surface pour eliminer les objets sombres selon leur taille.
 * Basee sur ouverture de surface. Il suffit de changer :
 * -la recherche du minimum local.
 * -Empiler heigth et non - height.
 */

#define UNVISITED 0
#define MARKED 1
#define CANDIDATE 2

##begin PAreaClosing < TIN1, TIN2, LOOPP, POINT, VOISS, VOISL >
Errc PAreaClosing( const TIN1 &ims, TIN1 &imd, int connexity, int area ) {
   POINT p, p1, p2;
   float height;
   Lifo<POINT> marked;
   int v, nbpix;

   Heap<POINT, float, int> candidate(ims.VectorSize());
   TIN2 imi(ims.Size());
   imd = ims;   
   imi = UNVISITED;
   
##LOOPP(imd, p)
   {
      // Uniquement les points non encore traites.
      if (imi[p] == MARKED) {
	 continue;
      }

      // 1- Recherche d'un minimum local
      // ims[p] <=voisins et au moins 1 ims[voisin] > ims[p].
      bool minimum = true;
      bool minimumstrict = false;
      if (connexity == VOISS) {
	 for (v = 0; v < VOISS; v++) {
	    p1 = p + v$VOISS[v];
	    if (imd.Hold(p1)) {
	       if (imd[p] > imd[p1]) {
		  minimum = false;
		  break;
	       }
	       if (imd[p] < imd[p1])  {
		  minimumstrict = true;
	       }
	    }
	 }
      } else {
	 for (v = 0; v < VOISL; v++) {
	    p1 = p + v$VOISL[v];
	    if (imd.Hold(p1)) {
	       if (imd[p] > imd[p1]) {
		  minimum = false;
		  break;
	       }
	       if (imd[p] < imd[p1])  {
		  minimumstrict = true;
	       }
	    }
	 }
      }
      if (!minimum || !minimumstrict) {
	 continue;
      }

      // C'est un maximum : Empiler ce point qui devient la reference.
      // Attention: dans un tas Pandore c'est le minimum qui est en tete.
      height = (float)imd[p];
      candidate.Push(p, height);
      nbpix = 0;
      imi[p] = CANDIDATE;

      // Recherche de la taille de la surface de la region
      // dont p est l'extrema local.
      while (nbpix < area && !candidate.Empty()) {
	 p1 = candidate.Pop();
	 
	 // La region remonte en intensite-> on arrete.
	 if ((float)imd[p1] < height) {
	    imi[p1] -= CANDIDATE;
	    break;
	 }

	 height = (float)imd[p1];
	 marked.Push(p1);
	 nbpix++;

	 // Empiler tous ses voisins non encore traites.
	 // A l'envers pour empiler dans le sens clockwise.
	 // Plus efficace dans le parcours? a tester.
	 if (connexity == VOISS) {
	    for (v = $VOISS - 1; v >= 0; v--) {
	       p2 = p1 + v$VOISS[v];
	       if (imd.Hold(p2) && imi[p2] < CANDIDATE) {
		  candidate.Push(p2, (float)imd[p2]);
		  imi[p2] += CANDIDATE; // Positionne a entasse.
	       }
	    }
	 } else {
	    for (v= $VOISL - 1; v >= 0; v--) {
	       p2 = p1 + v$VOISL[v];
	       if (imd.Hold(p2) && imi[p2] < CANDIDATE) {
		  candidate.Push(p2, (float)imd[p2]);
		  imi[p2] += CANDIDATE; // Positionne a entasse.
	       }
	    }
	 }
      }

      // Les remettre a "non visites".
      while (!candidate.Empty()) {
	 p2 = candidate.Pop();
  	 imi[p2] -= CANDIDATE;
      }

      // Mettre tous les pixels de la pile à la valeur height.
      while (!marked.Empty()) {
	 p2 = marked.Pop();
	 imd[p2] = (TIN1::ValueType)height;
  	 imi[p2] = MARKED;
      }
   }

   return SUCCESS;
}

## append loadcases
   if (objs[0]->Type() == Po_$TIN1) {
      TIN1* const ims = (TIN1*)objs[0];
      objd[0] = new TIN1(ims->Props());
      TIN1* const imd = (TIN1*)objd[0];
      
      result = PAreaClosing(*ims, *imd, atoi(parv[0]), atoi(parv[1]));
      goto end;
   }
## end
##end

##forall(PAreaClosing, /Img2d/, Img2duc)
##forall(PAreaClosing, /Img3d/, Img3duc)

#undef UNVISITED
#undef CANDIDATE
#undef MARKED

