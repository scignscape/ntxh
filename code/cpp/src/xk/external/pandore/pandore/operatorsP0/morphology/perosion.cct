##begin PErosionG < TIN>
Errc PErosion( const TIN &grs, TIN &grd ) {
   grd = grs;
   
   for (int i = 1; i < grd.Size(); i++) {
      if (grs[i]) {
	 for (GEdge* ptr = grs[i]->Neighbours(); ptr != NULL; ptr = ptr->Next()) {
	    if (grs[ptr->Node()]->value < grd[i]->value) {
	       grd[i]->value = grs[ptr->Node()]->value;
	    }
	 }
      }
   }
   
