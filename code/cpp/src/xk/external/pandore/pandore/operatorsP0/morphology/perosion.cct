template < typename T>
Errc PErosion( const Imx2d < T> &ims, Imx2d < T> &imd, int numSE, int halfsize ) {
   if (numSE == 1) {
      dxFastErosion8(ims, imd, halfsize);
      return SUCCESS;
   }
   return PErosionGeneral(ims, imd, numSE, halfsize);
}

