#include <pandore.h>
using namespace pandore;

/**
 * @file pim2uc.cpp
 * Conversion d'une image quelconque en image de type Char.
 */

template <typename T, typename U>
Errc PIm2Uc( const Imx3d<T> &ims, Imx3d<U> &imd ) {
   imd = ims;
   return SUCCESS;
}

##begin PIm2Uc < TIN, TOUT >
## append loadcases
   if (objs[0]->Type() == Po_$TIN) {
      TIN* const ims = (TIN*)objs[0];
      objd[0] = new TOUT(ims->Props());
      TOUT* const imd = (TOUT*)objd[0];
      
      result = PIm2Uc(*ims, *imd);
      goto end;
   }
## end
##end

