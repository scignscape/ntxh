Errc POr( const TYPE &grs1, const TYPE &grs2, TYPE &grd ) {
   grd = grs1;
   for (int i = 0; i < grd.Size(); i++) {
      if (grs1[i] && grs2[i]) {
	 grd[i]->value = grs1[i]->value + grs2[i]->value;
      } else {
	 if ((grs2[i])) {
	    grd.Add(i, grs2[i]->Item(), grs2[i]->seed);
	    grd[i]->value = grs2[i]->value;
	 }
      }
   }
   return SUCCESS;
}
