template <typename T>
Errc PDilation( const Imx2d<T> &ims, Imx2d<T> &imd, int numSE, int halfsize ) {
   if (numSE == 1) {
      dxFastDilation8(ims, imd, halfsize);
      return SUCCESS;
   }
   return PDilationGeneral(ims, imd, numSE, halfsize);
}

