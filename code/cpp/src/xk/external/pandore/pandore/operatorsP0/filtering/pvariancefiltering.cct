#include <math.h>
#include <pandore.h>
using namespace pandore;

/**
 * @file pvariancefiltering.cpp
 * Filtre de variance. 
 * Remplace chaque pixel par la valeur de sa variance avec ses voisins
 * d'intensite comprise entre les deux seuils.
 */
##begin PVarianceFiltering < TIN1, TIN2, LOOPP, POINT , VOISL>
Errc PVarianceFiltering( const TIN1 &ims, TIN2 &imd, TIN1::ValueType low, TIN1::ValueType high ) {
   POINT p;
   TIN1::ValueType c;
   unsigned long nb;
   double moy, var;
   
##LOOPP(ims, p)
   {
      c = ims[p];
      if ((c >= low) && (c <= high)) {
	 nb = 1;
	 moy = (double)c;
      } else {
	 nb = 0;
	 moy = 0.0;
      }
      for (int v= 0; v < VOISL; v++) {
	 if (ims.Hold(p + v$VOISL[v])) {
	    c = ims[p+v$VOISL[v]];
	    if ((c >= low) && (c <= high)) {
	       nb++;
	       moy += (double)c;
	    }
	 }
      }
      if (nb) {
	 moy /= nb;
	 c = ims[p];
	 if ((c >= low) && (c <= high)) {
	    var = (c - moy) * (c - moy);
	 } else {
	    var = 0.0;
	 }
	 for (int v = 0; v < VOISL; v++) {
	    if (ims.Hold(p + v$VOISL[v])) {
	       c  = ims[p + v$VOISL[v]];
	       if ((c >= low) && (c <= high)) {
		  var += (c - moy) * (c - moy);
	       }
	    }
	 }
	 imd[p] = (TIN2::ValueType)(var / nb);
      } else {
	 imd[p] = 0;
      }
   }
  
  return SUCCESS;
}

## append loadcases
