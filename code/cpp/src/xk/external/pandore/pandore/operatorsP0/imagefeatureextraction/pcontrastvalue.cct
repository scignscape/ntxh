##begin PContrastValueG < TYPE, LOOP, ACC, VARS>
Float PContrastValue( const TYPE &grs, Collection &col_out ) {
   Float *t = new Float[1];
   int i;
   TYPE::ValueType max,min;

   min = Limits<TYPE::ValueType>::max();
   max = Limits<TYPE::ValueType>::min();
   for (i=0; i<grs.Size(); i++)
      if ((grs[i])) {
	 min = MIN(min,grs[i]->value);
	 max = MAX(max,grs[i]->value);
      } 
   t[0]= (Float)(max-min);
   col_out.SETARRAY("internal_array", Float, t, 1);
   return t[0];
}

##append loadcases
   if (objs[0]->Type() == Po_$TYPE) {
      TYPE* const grs=(TYPE*)objs[0];
      objd[0]=new Collection;
      Collection* const cold=(Collection*)objd[0];

      result= PContrastValue(*grs, *cold);
      goto end;
   }
## end 
##end

