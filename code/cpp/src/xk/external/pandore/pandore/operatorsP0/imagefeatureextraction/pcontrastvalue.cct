#include <pandore.h>
using namespace pandore;

/**
 * @file contraste.cpp
 * Calculates the total contrast of the image.
 */
template <typename T>
Float PContrastValue( const Imx3d<T> &ims, Collection &col_out ) {
   Float *t = new Float[ims.Bands()];
   
   for (int b=0; b<ims.Bands(); b++ ) {
      T *ps=ims.Vector(b);
      const T *pf=ims.Vector(b)+ims.VectorSize();
      T min,max;
      
      max=min=*ps++;
      for ( ;ps<pf; ps++ ) {
	 if (*ps>max) max=*ps;
	 if (*ps<min) min=*ps;
      }
      t[b] = (Float)max - min;
   }
   col_out.SETARRAY("internal_array", Float, t, ims.Bands());
   
   return t[0];
}

##begin PContrastValue < TYPE >
##append loadcases
   if (objs[0]->Type() == Po_$TYPE) {
