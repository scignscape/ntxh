#include <pandore.h>
#include <math.h>
using namespace pandore;

/**
 * @file plogtransform.cpp
 * @brief Gray level transformation using logarithmic transform.
 * 
 * Expands gray-levels using a logarithmic transform of the gray-levels.
 * s=c.log(1+r) where s is output gray-level and r the input gray-level,
 * and c is a constant.
 * Maps a narrow range of low gray-level values in the input image into
 * a wider range of output levels.
 * The opposite is true for higher values of input levels.
 * Uses the following transformation:
 * s = [c. log(1+r-smin)] + min
 * where c is use to normalize value from min and max
 * c=(max-min) / (log(smax-smin+1))
 */
template <typename T>
Errc PLogTransform( const Imx3d<T> &ims, const Imx3d<T> &imd, int inverse, float min, float max ) {
   if (min > max) {
      min=(float)Limits<T>::min();
      max=(float)Limits<T>::max();
   } else if (min < (float)Limits<T>::min() || max > (float)Limits<T>::max()) {
      std::cerr<< "Error plogtransform: Bad parameter values out of bound"<<std::endl;
      return FAILURE;
   }

   float smin, smax;
   smin = smax = (float) *(ims.Vector(0));
   T* ps;
   int b;
   for (b=0; b<ims.Bands(); b++) {
      // Get min,max.
      ps=ims.Vector(b);
      for ( ; ps<ims.Vector(b)+ims.VectorSize(); ps++ ) {  
	 if (smax < (float)*ps) smax = (float)*ps;
	 if (smin > (float)*ps) smin = (float)*ps;
      }
   }

   for (b=0; b<ims.Bands(); b++) {
      ps=ims.Vector(b);
      T* pd=imd.Vector(b);
      if (!inverse) {
	 // Logarithmic transformation.
	 double c=(((double)max-min) / (log(smax-smin+1.0)));
	 for (;ps<ims.Vector(b)+ims.VectorSize();ps++,pd++)
	    *pd=(T)((c*log(*ps-smin+1.0)) + min);
      } else {
	 // Exponential transformation.
	 double c=(((double)smax-smin) / (log((double)max-min+1.0)));
	 for (;ps<ims.Vector(b)+ims.VectorSize();ps++,pd++) {
	    *pd=(T)(exp((double)(*ps-smin)/c) -1.0 + min);
	 }
      }
   }
   return SUCCESS;
}

