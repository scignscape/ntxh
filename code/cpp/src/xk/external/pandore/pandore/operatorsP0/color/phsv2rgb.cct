#include <cmath>
#include <pandore.h>
using namespace pandore;

/**
 * @file phsl2rgb.cpp
 * Convert HSL image to RGB image.
 */

##begin PHSV2RGB < TIN, TOUT >
Errc PHSV2RGB( const TIN &ims, TOUT &imd ) {
   Float *h = ims.Vector(0);
   Float *s = ims.Vector(1);
   Float *v = ims.Vector(2);
   TOUT::ValueType *r = imd.Vector(0);
   TOUT::ValueType *g = imd.Vector(1);
   TOUT::ValueType *b = imd.Vector(2);

   for (Ulong i = 0; i < ims.VectorSize(); i++, r++, g++, b++, h++, s++, v++) {
      if (*s == 0) {
	 // achromatic (grey)
	 *r = *g = *b = (TOUT::ValueType)*v;
      } else {
	 *h /= 60;			// sector 0 to 5
	 *s /= 100.0f;
	 int w = (int)floor(*h);
	 float f = *h - w;			// factorial part of h
	 float p = *v * (1.0f - *s);
	 float q = *v * (1.0f - *s * f);
	 float t = *v * (1.0f - *s * (1.0f - f));
	 
	 switch (w) {
	     case 0:
		*r = (TOUT::ValueType)*v;
		*g = (TOUT::ValueType)t;
		*b = (TOUT::ValueType)p;
		break;
	     case 1:
		*r = (TOUT::ValueType)q;
		*g = (TOUT::ValueType)*v;
		*b = (TOUT::ValueType)p;
		break;
	     case 2:
		*r = (TOUT::ValueType)p;
		*g = (TOUT::ValueType)*v;
		*b = (TOUT::ValueType)t;
		break;
	     case 3:
		*r = (TOUT::ValueType)p;
		*g = (TOUT::ValueType)q;
		*b = (TOUT::ValueType)*v;
		break;
	     case 4:
		*r = (TOUT::ValueType)t;
		*g = (TOUT::ValueType)p;
		*b = (TOUT::ValueType)*v;
		break;
	     default:		// case 5:
		*r = (TOUT::ValueType)*v;
		*g = (TOUT::ValueType)p;
		*b = (TOUT::ValueType)q;
		break;
	 }
      }
   }
   return SUCCESS;
}

## append loadcases
   if (objs[0]->Type() == Po_$TIN) {
     TIN* const ims = (TIN*)objs[0];
     objd[0] = new TOUT(ims->Size());
     TOUT* const imd = (TOUT*)objd[0];
     
     result = PHSV2RGB(*ims, *imd);
     goto end;
   }
## end
##end

