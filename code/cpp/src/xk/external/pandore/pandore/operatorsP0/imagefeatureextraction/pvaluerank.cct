#include <pandore.h>
using namespace pandore;

/**
 * @file pvaluerank.cpp
 * Gets the num th value of the image.
 */
##begin PValueRank < TIN >
Errc PValueRank( const TIN &ims, int num ) {
   int h,g;
   TIN::ValueType *hg,val;
   int max;
   TIN::ValueType *ps=ims.Vector();
   const TIN::ValueType *pf=ims.Vector()+ims.VectorSize();
   
   if (num <=0 || num > MAXUSHORT) { // Un majorant?
      std::cerr << "Error pvaluerank: Parameter 'index' must be an integer within [1..65535]" << std::endl;
   }
   
   hg=(TIN::ValueType*)malloc(num*sizeof(TIN::ValueType));
   
   for (h=0; h<num;h++)
      hg[h]=Limits<TIN::ValueType>::max();
   
   // Compute histogram 
   max=0;
   
   for (; ps < pf; ps++) {
      val = *ps;
      for (h = 0; h < num; h++) {
	 if (val == hg[h]) {
	    if (h > max) {
	       max = h;
	    }
	    break;
	 }
	 if (val < hg[h]) {
	    if (h > max) {
	       max = h;
	    }
	    for (g = num - 1;g > h; g--) {
	       hg[g] = hg[g - 1];
	    }
	    hg[h] = val;
	    break;
	 }
      }
   }
   if (max < num - 1) {
      return FAILURE;
   }
   val= hg[num - 1];
   free(hg);
   return val;
}

## append loadcases
   if (objs[0]->Type()==Po_$TIN) {
      TIN* const ims=(TIN*)objs[0];
      
      result=PValueRank(*ims,atoi(parv[0]));
      goto end;
   }
## end
##end

##begin PValueRankG < TIN >
Errc PValueRank( const TIN &grs, int num ) {
   int h,g;
   TIN::ValueType *hg,val;
   int max;
   
   if (num <=0)
      num = 1;
   else if (num > MAXUSHORT)
      num = MAXUSHORT;
   
   hg=(TIN::ValueType*)malloc(num*sizeof(TIN::ValueType));
   
   for (h=0; h<num;h++)
      hg[h]=Limits<TIN::ValueType>::max();
   
   max=0;
   for (int i=0;i<grs.Size();i++) {
      if (grs[i]) {
	 val=grs[i]->value;
	 for (h=0; h<num;h++) {
	    if (val==hg[h]) {
	       if (h>max) max =h;
	       break;
	    }
	    if (val<hg[h]) {
	       if (h>max) max=h;
	       for (g=num-1;g>h;g--)
		  hg[g]=hg[g-1];
	       hg[h]=val;
	       break;
	    }
	 }
      }
   }
   if (max < num-1)
      return FAILURE;
   val= hg[num-1];
   free(hg);
   return val;
}

## append loadcases
   if (objs[0]->Type()==Po_$TIN) {
      TIN* const grs=(TIN*)objs[0];
      
      result=PValueRank(*grs,atoi(parv[0]));
      goto end;
   }
## end
##end

