#include <pandore.h>
using namespace pandore;

/**
 * @file pmodevalue.cpp
 *
 * Returns the pixel value that occurs most frequently in the image.
 */
template <typename T>
Float PModeValue( const Imx3d<T> &ims, Collection &col_out ) {
   std::map<T, long> histo;
   Float *t = new Float[ims.Bands()];

   for (int b = 0; b < ims.Bands(); ++b) {
      T *ps = ims.Vector(b);
      const T *pf = ims.Vector(b) + ims.VectorSize();

      for ( ; ps < pf ; ps++) {
	 ++histo[*ps];
      }
      typename std::map<T, long>::const_iterator h;
      h = histo.begin();
      T mode = h->first;
       for (;h != histo.end(); h++) {
	  if (histo[mode] < histo[h->first])
	     mode = h->first;
      }

      t[b] = (Float)mode;
      histo.clear();
   }
   col_out.SETARRAY("internal_array", Float, t, ims.Bands());

   return t[0];
}

##begin PModeValue < TYPE >
## append loadcases
   if (objs[0]->Type() == Po_$TYPE) {
      TYPE* const ims = (TYPE*)objs[0];
      objd[0] = new Collection;
      Collection* const cold = (Collection*)objd[0];
      
      result = PModeValue(*ims, *cold);
      goto end;
   }
## end
##end

##forall(PModeValue, /Im/)
##forall(PModeValue, /Reg/)

